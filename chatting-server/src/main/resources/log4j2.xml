<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%d{HH:mm:ss.SSS}][%-5p][%-25.25C{1}:%5L] - %m%n" />
		</Console>
		<RollingFile name="RollingFile" filename="chatting-system.log" filepattern="opensource-%d{yyyy-MM-dd}.log">
			<PatternLayout pattern="[%d{HH:mm:ss.SSS}][%-5p][%-25.25C{1}:%5L] - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="com.github.swhacademy.chatting.server" level="info" additivity="true">
			<AppenderRef ref="RollingFile" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>